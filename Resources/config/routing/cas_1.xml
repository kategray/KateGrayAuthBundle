<?xml version="1.0" encoding="UTF-8" ?>

<!-- CAS 1.0 Routes -->
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="kate_gray_auth_login" path="/login" methods="GET POST">
        <default key="_controller">KateGrayAuthBundle:CAS1:Login</default>
    </route>

    <route id="kate_gray_auth_logout" path="/logout" methods="GET POST">
        <default key="_controller">KateGrayAuthBundle:CAS1:Logout</default>
    </route>

    <route id="kate_gray_auth_validate" path="/validate" methods="GET POST">
        <default key="_controller">KateGrayAuthBundle:CAS1:Validate</default>
    </route>

</routes>
